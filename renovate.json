{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [ "^versions\\.txt$", "/versions\\.txt$" ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-.]+?) depName=(?<depName>[^\\s]+?)(?: (lookupName|packageName)=(?<packageName>[^\\s]+?))?(?: versioning=(?<versioning>[^\\s]+?))?(?: extractVersion=(?<extractVersion>[^\\s]+?))?(?: registryUrl=(?<registryUrl>[^\\s]+?))?\\s.+?_VERSION\\s*=\\s*\"?(?<currentValue>.+?)\"?(\\s|$)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "allowedVersions": "/-alpine/",
      "pinDigests": true
    },
    {
      "matchDepNames": ["docker.io/library/node"],
      "major": false
    },
    {
      "matchDepNames": ["docker.io/library/node", "aeneria/aeneria-app"],
      "groupName": "app"
    },
    {
      "matchDatasources": ["github-tags", "github-runners"],
      "groupName": "githubCi"
    }
  ]
}
